<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ivanc.swap">
    <uses-feature android:name="android.hardware.camera"
        android:required="true" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo2"
        android:label="@string/app_name"
        android:theme="@style/NavBarTest"
        android:supportsRtl="true">
        <activity
            android:name=".LoginPageActivity"
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/NavBarTest"/>

        <activity
            android:name=".SendBirdMessagingActivity"
            android:label="SendBird"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"
            >
        </activity>

        <activity
            android:name=".SendBirdMemberListActivity"
            android:label="SendBird"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"
            >
        </activity>

        <activity
            android:name=".SendBirdUserListActivity"
            android:label="SendBird"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"
            >
        </activity>

        <activity
            android:name=".SendBirdMessagingChannelListActivity"
            android:label="SendBird"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"
            >
        </activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="97053a06e09c5adf94f1cab5b63fa61df1bde4c2"
            />
    </application>

</manifest>